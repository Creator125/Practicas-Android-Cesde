<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MatriculaActivity">

    <TextView
        android:id="@+id/tvtitulo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="70dp"
        android:text="Matriculas" />

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etmatricula"
            android:layout_width="174dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:ems="10"
            android:gravity="center"
            android:hint="Codigo maricula"
            android:inputType="number"
            android:textSize="28dp" />

        <Button
            android:id="@+id/btbuscarmatricula"
            android:layout_width="110dp"
            android:layout_height="60dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:onClick="Consultar"
            android:text="Buscar"
            android:textSize="23dp"
            />
    </LinearLayout>

    <EditText
        android:id="@+id/etfechasistema"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:inputType="datetime"
        android:hint="Fecha Sistema"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etcarnet"
                android:layout_width="174dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Numero carnet"
                android:inputType="number"
                android:textSize="28dp"
                android:enabled="false"
                />

            <Button
                android:id="@+id/btbuscarcarnet"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:textSize="23dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="Buscar"
                android:onClick="ConsultarCarnet"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvnombre"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="28dp"
                android:gravity="center"
                android:text="Nombre"
                />
            <TextView
                android:id="@+id/tvcarrera"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="28dp"
                android:gravity="center"
                android:text="Carrera"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/etmateria"
                android:layout_width="174dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:ems="10"
                android:gravity="center"
                android:hint="Codigo materia"
                android:inputType="number"
                android:textSize="28dp"
                android:enabled="false"
                />

            <Button
                android:id="@+id/btbuscarmateria"
                android:layout_width="110dp"
                android:layout_height="60dp"
                android:textSize="23dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="Buscar"
                android:onClick="Consultar"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/tvmateria"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="28dp"
                android:gravity="center"
                android:text="Materia"
                />
            <TextView
                android:id="@+id/tvcredito"
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:textSize="28dp"
                android:gravity="center"
                android:text="Credito"
                />
        </LinearLayout>
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbactivo"
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:text=" Activo"
        android:enabled="false"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btadicionar"
                android:layout_width="155dp"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:enabled="false"
                android:onClick="Adicionar"
                android:text="Adicionar"
                android:textSize="23dp" />

            <Button
                android:id="@+id/btanular"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:textSize="23dp"
                android:layout_marginLeft="7dp"
                android:layout_weight="1"
                android:text="Anular"
                android:enabled="false"
                android:onClick="Anular"
                />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btlimpiar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="23dp"
            android:layout_weight="1"
            android:text="Limpiar"
            android:onClick="Limpiar"/>

        <Button
            android:id="@+id/btregresar"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="23dp"
            android:layout_marginLeft="7dp"
            android:layout_weight="1"
            android:text="Regresar"
            android:onClick="Regresar"/>
    </LinearLayout>
</LinearLayout>